{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "amount": {
            "type": "number"
        },
        "base": {
            "type": "string",
            "pattern": "^[A-Z]{3}$"
        },
        "date": {
            "type": "string",
            "format": "date"
        },
        "rates": {
            "type": "object",
            "patternProperties": {
                "^[A-Z]{3}$": {
                    "type": "number"
                }
            },
            "minProperties": 1    
        }
    },
    "required": ["amount", "base", "date", "rates"]
}
